{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[BACKEND][DEV] Hot reload backend",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/dev.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "[FRONTEND][DEV] Hot reload frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Local:.*http://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        },
        {
            "name": "[TEST][UNIT] Backend unit tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/",
                "--maxfail=1",
                "--exitfirst",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "[TEST][REGRESSION] Full regression suite",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/regression/",
                "--maxfail=1",
                "--exitfirst",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "[TEST][ALL] All tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "--maxfail=1",
                "--exitfirst",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "[BENCH][API] API benchmarks",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/benchmark/bench_api.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        }
    ]
}